<h1>Requests</h1>

<table>
  <thead>
    <tr>
      <th>Description</th>
      <th>Status</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @requests.each do |request| %>

      <% if request.user == current_user %>
        <tr>
          <td><%= request.description %></td>
          <td><%= request.status %></td>
          <td><%= link_to 'Edit', edit_request_path(request) %></td>
          <td><%= link_to 'Destroy', request, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        </tr>

      <% elsif current_user.turns.include? request.turn %>
        <tr>
          <td><%= request.description %></td>
          <td><%= request.status %></td>
          <td><%= link_to 'Accept', accept_request_path(request) %></td>
          <td><%= link_to 'Refuse', refuse_request_path(request) %></td>
        </tr>
      <% end %>
    <% end %>
  </tbody>
</table>

<br>
